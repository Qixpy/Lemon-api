# npm configuration for Lemon API
# Safe defaults for supply-chain security

# Disable funding messages
fund=false

# Disable automatic audit on install (we run it explicitly in CI)
audit=false

# Save exact versions (no ^ or ~ ranges)
save-exact=true

# Prefer offline mode when possible
prefer-offline=true

# Disable package scripts by default for security (re-enable if needed)
# ignore-scripts=false
