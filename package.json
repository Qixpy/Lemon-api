{
  "name": "lemon-api",
  "version": "1.0.0",
  "private": true,
  "description": "Lemon API: secure REST API with JWT, RBAC, Prisma, Express, TypeScript",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:report": "tsx tests/runTests.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:studio": "prisma studio",
    "seed": "prisma db seed",
    "docker:build": "docker build -t lemon-api:latest .",
    "docker:up:prod": "docker compose -f docker-compose.prod.yml up -d --build",
    "docker:down:prod": "docker compose -f docker-compose.prod.yml down -v",
    "docker:logs": "docker compose -f docker-compose.prod.yml logs -f api"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "argon2": "^0.31.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.0.0",
    "pino-http": "^9.0.0",
    "prisma": "^5.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^4.0.16",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
